<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbot_background"
    tools:context="com.lee.loollool.car_activities.CarActivity">


    <ImageView
        android:id="@+id/car_imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mbot_offline"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mbot_backdrop"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/car_img_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_img_auto" />

        <ImageView
            android:id="@+id/car_img_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_img_manual" />

        <ImageView
            android:id="@+id/car_img_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_img_track" />

        <ImageView
            android:id="@+id/car_img_G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_img_g" />

        <ImageView
            android:id="@+id/car_img_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_img_shake" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:background="@drawable/mbot_rocker">

        <ImageView
            android:id="@+id/car_joystick"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/mbot_dot" />

    </FrameLayout>

    <ImageView
        android:id="@+id/car_imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/car_img_signal"
        android:layout_alignEnd="@+id/car_img_signal"
        android:layout_marginEnd="85dp"
        android:src="@drawable/mbot_speed_1" />


    <ImageView
        android:id="@+id/car_img_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/car_img_light"
        android:layout_alignStart="@+id/car_img_light"
        android:layout_marginBottom="20dp"
        android:src="@drawable/car_img_signal" />

    <ImageView
        android:id="@+id/car_img_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/car_img_speed"
        android:layout_alignStart="@+id/car_img_speed"
        android:layout_marginBottom="20dp"
        android:src="@drawable/car_img_light" />

    <ImageView
        android:id="@+id/car_img_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/car_img_speed" />

    <ImageView
        android:id="@+id/car_img_blow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/car_img_light"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/car_img_light"
        android:src="@drawable/car_img_blow" />

    <ImageView
        android:id="@+id/car_imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/mbot_info" />


</RelativeLayout>
